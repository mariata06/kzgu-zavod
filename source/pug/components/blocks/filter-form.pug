mixin filter-form()
  .filter-form
    //- вставлять блоки во внешний контейнер неверно
    //- все блоки содержат в себе container без доп класса tutorial__wrapper

    .accordion
      h4.title.title--h4.filter-form__title Фильтры

      form(action="#").form.form--filter
        .accordion__item
          button(type="button").btn.accordion__btn Максимальная мощность, кВа
            +icon('icon-dropdown', 12, 8)

          .accordion__content.form__wrapper
            .range-slider
              .range-slider__progress-container
                .range-slider__progress
              .range-slider__controls
                input(value="1.6" min="0" max="10" step="0.1" type="range" class="range-slider__control-min")
                input(value="3.2" min="0" max="10" step="0.1" type="range" class="range-slider__control-max")

              .range-slider__price
                .range-slider__price-field
                  //- span Min
                  input(value="1.6" type="number" class="range-slider__price-min")
                  span от
                .range-slider__separator
                .range-slider__price-field
                  //- span Max
                  input(value="3.2" type="number" class="range-slider__price-max")
                  span до

        .accordion__item
          button(type="button").btn.accordion__btn Номинальная мощность, кВа
            +icon('icon-dropdown', 12, 8)

          //- .accordion__content.form__wrapper
          //-   +custom-input({inputType: "range"})

        .accordion__item
          button(type="button").btn.accordion__btn Двигатель/бренд
            +icon('icon-dropdown', 12, 8)

          .accordion__content.form__wrapper
            +custom-input({inputType: 'checkbox', inputLabel: 'Doosan'})
            +custom-input({inputType: 'checkbox', inputLabel: 'Volvo Penta', checked})
            +custom-input({inputType: 'checkbox', inputLabel: 'Pentu'})
            +custom-input({inputType: 'checkbox', inputLabel: 'Cummins'})
            +custom-input({inputType: 'checkbox', inputLabel: 'Doosan'})
            +custom-input({inputType: 'checkbox', inputLabel: 'Volvo Penta'})
            +custom-input({inputType: 'checkbox', inputLabel: 'Pentu'})
            +custom-input({inputType: 'checkbox', inputLabel: 'Cummins'})
            +btn({text: 'Показать все'}).btn--bluetext

        .accordion__item
          button(type="button").btn.accordion__btn Количество фаз
            +icon('icon-dropdown', 12, 8)

          .accordion__content.form__wrapper
            +custom-input({inputType: 'checkbox', inputLabel: 'три'})
            +custom-input({inputType: 'checkbox', inputLabel: 'четыре'})
            +custom-input({inputType: 'checkbox', inputLabel: 'три'})
            +custom-input({inputType: 'checkbox', inputLabel: 'четыре'})

        .accordion__item
          button(type="button").btn.accordion__btn Объем бака, л
            +icon('icon-dropdown', 12, 8)

          .accordion__content.form__wrapper
            +custom-input({inputType: 'checkbox', inputLabel: '63 л'})
            +custom-input({inputType: 'checkbox', inputLabel: '150 л'})
            +custom-input({inputType: 'checkbox', inputLabel: '63 л'})
            +custom-input({inputType: 'checkbox', inputLabel: '150 л'})

        +btn({text: 'Применить', type: "submit"}).btn--blue
        +btn({text: 'Сбросить фильтр', type: "button"}).btn--greytext
