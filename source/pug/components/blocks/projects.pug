mixin projects(data)
  section.projects&attributes(attributes)
    //- вставлять блоки во внешний контейнер неверно
    //- все блоки содержат в себе container без доп класса tutorial__wrapper
    .container
      .projects__slider

        h2.projects__title.title.title--h1 Реализованные проекты
        .projects__slider-nav.slider-nav
          button.btn.btn--slider-prev
            +icon("icon-arrow-left", 11, 16)
          button.btn.btn--slider-next
            +icon("icon-arrow-left", 11, 16)
        .projects__slider-wrapper
          each slide in data
            .projects__slide
              +project-card(slide)

        +pagination()
