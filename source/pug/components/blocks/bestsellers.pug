mixin bestsellers(title, data)
  section.bestsellers
    //- вставлять блоки во внешний контейнер неверно
    //- все блоки содержат в себе container без доп класса tutorial__wrapper
    .container
      .bestsellers__slider
        h2.bestsellers__title.title.title--h1 !{title}
        .bestsellers__slider-nav.slider-nav
          button.btn.btn--slider-prev
            +icon("icon-arrow-left", 11, 16)
          button.btn.btn--slider-next
            +icon("icon-arrow-left", 11, 16)
        .bestsellers__slider-wrapper
          each slide in data
            .bestsellers__slide
              .bestsellers__product
                +product-card(slide)
